<p id="notice"><%= notice %></p>

<div class="content-wrapper formStyle">
  <h3>Order Overview</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Order Date and Time</th>
        <th>Order Total</th>
        <th>Order Type</th>
        <th>Order Status</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @order.created_at.to_formatted_s(:long) %></td>
        <td>$<%= @order.order_total %></td>
        <td>
          <%= @order.order_type.upcase %><br/>
          <%= @order.delivery_address %>
        </td>
        <td>
          <%= @order.order_status.upcase %><br/>
          Last updated at: <%= @order.updated_at.to_formatted_s(:long)%>
        </td>
      </tr>
    </tbody>
  </table>

  <h3>Order Items</h3>
  <table class="table">
    <thead id='order-items-header'>
      <tr>
        <th>Supplier</th>
        <th>Item</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
      </tr>
    </thead>

    <tbody>
      <% @order.order_items.each do |order_item| %>
        <tr>
          <td class='col-md-3'><%= link_to order_item.item.supplier.name, supplier_path(order_item.item.supplier) %></td>
          <td><strong><%= link_to "#{order_item.item.title}", item_path(order_item.item) %></strong></td>
          <td><%= order_item.item.price %></td>
          <td><%= order_item.quantity%></td>
          <td><%= order_item.subtotal %></td>
        </tr>
      <% end %>
      </tr>
    </tbody>
  </table>

  <%= link_to 'Back to Order History', user_path(current_user.id) %> |
  <%= link_to 'Back to Menu', items_path %>
</div>
