<%= form_for(@order) do |f| %>

  <%= render partial: 'shared/error_messages', locals: { obj: @order } %>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :order_total %><br>
    <%= f.text_field :order_total %>
  </div>
  <div class="field">
    <%= f.label :order_type %><br>
    <%= f.text_field :order_type %>
  </div>
  <div class="field">
    <%= f.label :delivery_address %><br>
    <%= f.text_field :delivery_address %>
  </div>
  <div class="field">
    <%= f.label :order_status %><br>
    <%= f.text_field :order_status %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
