<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="page-header">
      <h1>I Forgot My Password</h1>
    </div>
    <%= form_tag password_resets_path, { class: 'form-horizontal' } do |f| %>
      <%# render partial: 'shared/error_messages', locals: { obj: @user } %>

      <div class="form-group">
        <%= label_tag :email, nil, class: 'col-md-4 control-label' %>
        <div class="col-md-8">
          <%= text_field_tag :email, nil, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-12">
          <div class="pull-right">
            <%= submit_tag "Reset Password", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
