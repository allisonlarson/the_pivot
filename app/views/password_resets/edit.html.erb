<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="page-header">
      <h1>Reset Password</h1>
    </div>
    <%= form_for @user, url: password_reset_path(params[:id]), html: { class: 'form-horizontal' } do |f| %>
      <%= render partial: 'shared/error_messages', locals: { obj: @user } %>

      <div class="form-group">
        <%= f.label :email, class: 'col-md-4 control-label' %>
        <div class="col-md-8">
          <p class="form-control-static"><%= @user.email %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'col-md-4 control-label' %>
        <div class="col-md-8">
          <%= f.text_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: 'col-md-4 control-label' %>
        <div class="col-md-8">
          <%= f.text_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-12">
          <div class="pull-right">
            <%= submit_tag "Reset Password", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
