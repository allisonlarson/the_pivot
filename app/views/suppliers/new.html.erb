<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="page-header">
      <h1>Enter Supplier Information</h1>
    </div>
    <%= form_for @supplier, html: { class: 'form-horizontal' } do |f| %>
      <%= render partial: 'shared/error_messages', locals: { obj: @supplier } %>

      <div class="form-group">
        <%= f.label :name, class: 'col-md-4 control-label' %>

        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :url, class: 'col-md-4 control-label' %>
        <div class="col-md-8">
          <p>www.airlift.heroku.<%= f.text_field :url, class: "form-control" %>.com</p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class: 'col-md-4 control-label' %>
        <div class="col-md-8">
          <%= f.text_field :description, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-12">
          <div class="pull-right">
            <%= f.submit value="Create Supplier Account", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
