<div class='edit-page'>
<div>
<h1><%= @user.full_name %><a class='btn btn-warning edit-link' >Edit</a></h1>
  <div class='edit-dropdown hidden'>
    <%= form_for @user do |f| %>
      <%= f.label :full_name %>
      <%= f.text_field :full_name %>
      <%= f.submit class: 'btn btn-danger', value: 'Update' %>
    <% end %>
  </div>
</div>
<div>
<h5><%= @user.display_name %><a class='btn btn-warning edit-link' >Edit</a></h5>
  <div class='edit-dropdown hidden'>
    <%= form_for @user do |f| %>
      <%= f.label :display_name %>
      <%= f.text_field :display_name %>
      <%= f.submit class: 'btn btn-danger', value: 'Update' %>
    <% end %>
  </div>
</div>
<div>
<h5><%= @user.email %><a class='btn btn-warning edit-link' >Edit</a></h5>
  <div class='edit-dropdown hidden'>
    <%= form_for @user do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.submit class: 'btn btn-danger', value: 'Update' %>
    <% end %>
  </div>
</div>

<%= render partial: 'shared/edit_address_table', locals: { address_type: 'billing' } %>
<%= render partial: 'shared/edit_address_table', locals: { address_type: 'shipping' } %>

</div>

<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
<script src="assets/javascripts/application.js" type="text/javascript" charset="utf-8"></script>
