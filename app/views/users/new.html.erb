<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="page-header">
      <h1>Sign Up</h1>
    </div>
    <%= form_for @user, html: { class: 'form-horizontal' } do |f| %>
      <%= render partial: 'shared/error_messages', locals: { obj: @user } %>

      <div class="form-group">
        <%= f.label :full_name, class: 'col-md-4 control-label' %>

        <div class="col-md-8">
          <%= f.text_field :full_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: 'col-md-4 control-label' %>
        <div class="col-md-8">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :display_name, class: 'col-md-4 control-label' %>
        <div class="col-md-8">
          <%= f.text_field :display_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'col-md-4 control-label' %>
        <div class="col-md-8">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation", class: 'col-md-4 control-label' %>
        <div class="col-md-8">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-12">
          <div class="pull-right">
            <%= f.label :supplier, class: 'control-label' %>
            <%= f.radio_button :role, :supplier %>
            <%= f.label :provider, class: 'control-label' %>
            <%= f.radio_button :role, :provider %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-12">
          <div class="pull-right">
            <%= f.submit value="Create Account", class: "btn btn-default" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
