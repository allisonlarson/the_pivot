<br/><br/>
<div class="content-wrapper formStyle">
  <table class="table" >
    <h4><%= address_type.capitalize %> Addresses</h4>
    <thead>
      <tr>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zipcode</th>
        <th></th>
      </tr>
    </thead>

    <% @user.addresses.select { |a| a.send(address_type) }.each do |address| %>
    <tbody>
        <tr>
          <td class='col-md-2'><%= address.street %></td>
          <td class='col-md-2'><%= address.city %></td>
          <td class='col-md-2'><%= address.state %></td>
          <td class='col-md-2'><%= address.zip %></td>
          <td class='col-md-2'><a class='btn btn-default edit-address-link'>Edit</a>
        </tr>
        <tr class='edit-address-dropdown hidden'>
          <%= form_for address, url: dashboard_user_address_path(address) do |f| %>
            <td>
            <%= f.label      :street %>
            <%= f.text_field :street %>
            </td>
            <td>
            <%= f.label      :city %>
            <%= f.text_field :city %>
            </td>
            <td>
            <%= f.label      :state %>
            <%= f.text_field :state %>
            </td>
            <td>
            <%= f.label      :zip %>
            <%= f.text_field :zip%>
            </td>
            <td>
            <%= f.submit class: 'btn btn-danger', value: 'Update' %>
            </td>
          <% end %>
        </tr>
    </tbody>
    <% end %>
  </table>
</div>
