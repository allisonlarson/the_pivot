<%= form_for([:dashboard, @supplier], :html => { :class => "form-horizontal"}) do |f| %>
  <%= f.text_field :description, class: "form-control" %>
  <div class="form-group">
    <%= f.label :picture, :class => "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :picture %>
    </div>
  </div>
  <%= f.submit value="Save Changes", class: "btn btn-default" %>
  <%= link_to 'Cancel', dashboard_supplier_path(current_supplier, @supplier), class: "btn btn-default" %>
<% end %>
