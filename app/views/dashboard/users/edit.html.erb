<div class='edit-page'>
</br><div class='custom-box'>
  <h1><%= @user.full_name %></h1>

  <%= form_for @user, url: dashboard_user_path, html: { class: 'form-horizontal' } do |f| %>
    <%= render partial: 'shared/error_messages', locals: { obj: @user } %>

    <div class="form-group">
      <%= f.label :full_name, class: 'col-md-2 control-label' %>
      <div class="col-md-2">
        <%= f.text_field :full_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :display_name, class: 'col-md-2 control-label' %>
      <div class="col-md-2">
        <%= f.text_field :display_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'col-md-2 control-label' %>
      <div class="col-md-2">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, class: 'col-md-2 control-label' %>
      <div class="col-md-2">
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :send_texts, "Send me order updates from Airlift", class: 'col-md-2 control-label' %>
      <div class="col-md-2">
        <%= f.check_box :send_texts, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-12">
        <%= f.submit class: 'btn edit-user-link', value: 'Save Changes' %>
      </div>
    </div>
  <% end %>
</div></br>

  <div class='custom-box'>
    <%= render partial: 'shared/edit_address_table', locals: { address_type: 'billing' } %>
  </div></br>
  <div class='custom-box'>
    <%= render partial: 'shared/edit_address_table', locals: { address_type: 'shipping' } %>
  </div></br>
</div>
<%= link_to 'Back to Dashboard', dashboard_root_path, class: 'btn btn-default' %>
