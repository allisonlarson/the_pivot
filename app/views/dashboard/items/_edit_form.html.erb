<div class="form-group">
  <div class="span6 offset3">
    <%= form_for([:dashboard, current_supplier, @item], :html => { :class => "form-horizontal"}) do |f| %>

    <%= render partial: 'shared/error_messages', locals: { obj: @item } %>

      <div class="form-group">
        <%= f.label :title, :class => "col-sm-1 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control", id: 'edit-item-title' %><br/>
          <p id='item-caption-helper'></p>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :description, :class => "col-sm-1 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :description, class: "form-control" %>
          <p id='item-caption-helper'>Max 500 chars.</p>

        </div>
      </div>


      <div class="form-group">
        <%= f.label :price, :class => "col-sm-1 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :price, class: "form-control", value: @item.edit_price %>
          <p id='item-caption-helper'>Example: 1 = $1.00 (digits only)</p>

        </div>
      </div>

      <div class="form-group">
        <%= f.label :categories, :class => "col-sm-1 control-label" %>
        <div class="col-sm-10">
          <%= f.select(:categories, options_from_collection_for_select(sort_categories(Category.all), :id, :name), {}, { multiple: true, size: Category.all.count }) %>
          <p id='item-caption-helper'>Category Required</p>

        </div>

      </div>

      <div class="form-group">
        <%= f.label :picture, :class => "col-sm-1 control-label" %>
        <div class="col-sm-10">
          <%= f.file_field :picture %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <div class="actions">
            <%= f.submit value="Save Changes", class: "btn btn-primary" %>
            <%= link_to 'Back to Item Management', dashboard_supplier_items_path(current_supplier), class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
