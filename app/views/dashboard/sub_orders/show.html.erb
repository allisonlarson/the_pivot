<div class="content-wrapper formStyle">
  <h1>Order Details:</h1>

  <h3>Customer Info:</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Customer Name:</th>
        <th>Customer Email:</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @sub_order.order.user.full_name %></td>
        <td><%= @sub_order.order.user.email %></td>
        <td><%= link_to 'Edit', edit_dashboard_supplier_sub_order_path(current_supplier, @sub_order) %>
      </tr>
    </tbody>
  </table>

  <h3>Order Overview:</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Order Date and Time:</th>
        <th>Order Total:</th>
        <th>Order Type:</th>
        <th>Order Status:</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @sub_order.created_at.to_formatted_s(:long) %></td>
        <td>
          Last updated at: <%= @sub_order.updated_at.to_formatted_s(:long)%>
        </td>
      </tr>
    </tbody>
  </table>

  <h3>Order Items:</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Item:</th>
        <th>Price:</th>
        <th>Quantity:</th>
        <th>Subtotal:</th>
      </tr>
    </thead>

    <tbody>
      <% unique_order_items = @sub_order.order_items.to_a.uniq { |order_item| order_item.item_id } %>
      <% unique_order_items.each do |order_item| %>
        <tr>
          <td><strong><%= link_to "#{order_item.item.title}", item_path(order_item.item) %></strong></td>
          <td><%= order_item.item.price %></td>
          <% item_id = order_item.item_id %>
          <td>
            <%= quantity = @sub_order.order_items.select { |order_item| order_item.item_id == item_id }.count%>
          </td>
          <td><%= quantity * order_item.item.price %></td>
        </tr>
      <% end %>
      </tr>
    </tbody>
  </table>

  <div>

  </div>
</div>
