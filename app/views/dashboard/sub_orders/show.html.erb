<div class="content-wrapper formStyle">
  <h1>Order Details:</h1>

  <h3>Customer Info:</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Customer Name:</th>
        <th>Customer Email:</th>
        <th>Delivery Info:</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @sub_order.provider_name %></td>
        <td><%= @sub_order.provider_email %></td>
        <td>Something should go here</td>
      </tr>
    </tbody>
  </table>

  <h3>Order Overview:</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Order Date and Time:</th>
        <th></th>
        <th>Order Total:</th>
        <th>Order Type:</th>
        <th>Order Status:</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @sub_order.created_at.to_formatted_s(:long) %></td>
        <td>Last updated at: <%= @sub_order.updated_at.to_formatted_s(:long)%></td>
        <td><%= @sub_order.get_total %></td>
        <td><%= @sub_order.order_type %></td>
        <td><%= @sub_order.status %></td>
      </tr>
    </tbody>
  </table>

  <h3>Order Items:</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Item:</th>
        <th>Price:</th>
        <th>Quantity:</th>
        <th>Subtotal:</th>
      </tr>
    </thead>

    <tbody>
      <% @sub_order.order_items.each do |order_item| %>
        <tr>
          <td><strong><%= link_to "#{order_item.item.title}", item_path(order_item.item) %></strong></td>
          <td><%= order_item.get_price %></td>
          <td><%= order_item.quantity %></td>
          <td><%= order_item.get_subtotal %></td>
        </tr>
      <% end %>
      </tr>
    </tbody>
  </table>

  <div>
    <%= link_to 'Edit', edit_dashboard_supplier_sub_order_path(current_supplier, @sub_order) %> |
    <%= link_to 'Back to Order Management', dashboard_supplier_sub_orders_path(current_supplier) %>
  </div>
</div>
