<div class="content-wrapper formStyle">
  <h1>Order Details:</h1>

  <h3>Customer Info:</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Customer Name:</th>
        <th>Customer Email:</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @sub_order.provider_name %></td>
        <td><%= @sub_order.provider_email %></td>
      </tr>
    </tbody>
  </table>

  <h3>Order Overview:</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Order Date and Time:</th>
        <th>Order Total:</th>
        <th>Order Type:</th>
        <th>Order Status:</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @sub_order.created_at.to_formatted_s(:long) %></td>
        <td><dropdown type>
          Last updated at: <%= @sub_order.updated_at.to_formatted_s(:long)%>
        </td><dropdown status>
      </tr>
    </tbody>
  </table>

  <h3>Order Items:</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Item:</th>
        <th>Price:</th>
        <th>Quantity:</th>
        <th>Subtotal:</th>
      </tr>
    </thead>

    <tbody>
      <% @sub_order.order_items.each do |order_item| %>
        <tr>
          <td><strong><%= order_item.item.title %></strong></td>
          <td><%= order_item.item.price %></td>
          <% item_id = order_item.item_id %>
          <td><%= quantity = @sub_order.order_items.select { |order_item| order_item.item_id == item_id }.count%></td>
          <td><%= quantity * order_item.item.price %></td>
          <td><%= link_to 'Edit Item' %></td>
          <td><%= link_to 'Delete', dashboard_supplier_sub_order_order_item_path(current_supplier, @sub_order, order_item.id), method: :delete %></td>
        </tr>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
