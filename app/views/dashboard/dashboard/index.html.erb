<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Date</th>
          <th>Total</th>
          <th>Type</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.created_at.to_formatted_s(:short) %></td>
            <td><%= order.order_total %></td>
            <td><%= order.order_type.capitalize %></td>
            <td><%= order.order_status.capitalize %></td>
            <td><%= link_to 'View Order Details', order_path(order) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
