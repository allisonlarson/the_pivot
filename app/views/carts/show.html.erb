<h1>Items in Your Cart</h1>
<table class='table'>
  <thead>
    <tr>
      <th>Item:</th>
      <th>Price:</th>
      <th>Quantity:</th>
      <th>Item Total:</th>
    </tr>
  </thead>

  <tbody>
    <% @cart.cart_items.each do |item| %>
      <tr>
        <td><%= link_to item.item.title, item_path(item.item) %></td>
        <td><%= item.item.format_price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.total_price %></td?
x      </tr>
    <% end %>
  </tbody>
</table>
  Total: <%= @cart.get_total %>
  <%= link_to 'Continue to Checkout', new_order_path,  class: "btn btn-primary" %>

</div>
