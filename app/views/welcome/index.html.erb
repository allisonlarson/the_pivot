<div class="hero-unit">
  <div id='hero-content'>
    <h1>Airlift</h1>
    <p>Getting disaster relief supplies <br/>to the people who need it.</p>

    <p><%= link_to 'See All Items', items_path, class: "btn btn-default btn-lg" %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div id="featured-supplier-header"><h1>Featured Suppliers</h1></div>
  </div>
</div>
<div class="row">
  <% @featured.each do |supplier| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <%= image_tag supplier.supplier.picture.url(:medium), :class => "img-rounded" %>
        <div class="caption">
          <h3><%= link_to supplier.supplier.name, supplier.supplier %></h3>
          <p><%= supplier.supplier.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
